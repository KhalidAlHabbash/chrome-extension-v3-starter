{
    "manifest_version": 3,
    "name": "Rye - Real, Scalable Interviews",
    "description": "Simulate real LeetCode interviews",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Rye",
        "default_popup": "popup/popup.html"
    },
    "permissions": [],
    "host_permissions": [
        "https://leetcode.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["src/content.js"],
        "matches": ["https://leetcode.com/*"],
        "type": "module"
    }],
    "web_accessible_resources": [
    {
      "resources": ["toolbar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
